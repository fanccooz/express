{
//  设置重启模式
  "restartable": "rs",
//  设置忽略文件
  "ignore": [
    ".git",
    ".svn",
    "node_modules/**/node_modules"
  ],
//  设置日志输出模式，true 详细模式
  "verbose": true,
//  设置运行服务的后缀名与对应的命令
  "execMap": {
//    nodemon 代替 node
    "js": "node --harmony"
  },
//  watch-监听哪些文件的变化，当变化的时候自动重启
  "watch": [

  ],
  "env": {
    "NODE_ENV": "development"
  },
//  ext-监控指定的后缀文件名
  "ext": "js json"
}